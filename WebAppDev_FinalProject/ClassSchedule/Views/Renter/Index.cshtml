@namespace GenreSchedule.Models

@model IEnumerable<Renter>

@{
    ViewData["Title"] = "Renter";
}

<div class="text-center">
    <h1 class="display-4">Renters</h1>
</div>

<a asp-action="Add" class="ml-3">Add Renter</a>

<table class="table">
    <thead>
        <tr><th>First Name</th><th>Last Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Renter renter in Model)
        {
            <tr>
                <td>@renter.FirstName</td>
                <td>@renter.LastName</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@renter.RenterId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

