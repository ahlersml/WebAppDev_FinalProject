@namespace GenreSchedule.Models

@model Genre

@{
    ViewData["Title"] = $"{ViewBag.Operation} Genre";
}

<h1 class="display-4">@ViewBag.Operation Movie Rental</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="genre"></label>
        <input asp-for="genre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Renter"></label>
        <select asp-for="RenterId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Renters,"RenterId","FullName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <select asp-for="DateId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Dates,"DateId","Name"))"></select>
    </div>
    
    

    @if (ViewBag.Operation == "Edit")
    {
        <input type="hidden" asp-for="GenreId" />
    }

    <button type="submit" class="btn btn-dark">@ViewBag.Operation</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>