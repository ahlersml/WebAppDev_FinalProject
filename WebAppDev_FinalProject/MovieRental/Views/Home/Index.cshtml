<a asp-action="Add" asp-controller="Genre" class="ml-3">Add Movie Rental</a>

<table class="table">
    <thead>
        <tr><th>Title</th><th>Genre</th><th>Renter</th><th>Date</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Genre c in Model) {
        <tr>
            <td>@c.Title</td>
            <td>@c.genre</td>
            <td>@c.Renter.FullName</td>
            <td>@c.Date</td>
            <td>
                <a asp-action="Edit" asp-controller="Genre" asp-route-id="@c.GenreId"
                   class="btn btn-outline-dark">Edit</a>
                <a asp-action="Delete" asp-controller="Genre" asp-route-id="@c.GenreId"
                   class="btn btn-outline-dark">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

